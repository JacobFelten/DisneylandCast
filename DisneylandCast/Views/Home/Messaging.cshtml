@model DisneylandCast.Models.Message

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Messaging</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-info">
        <ul class="navbar-nav">
            <li class="nav-item"><a class="nav-link text-light" asp-action="Index">Home</a></li>
            <li class="nav-item"><a class="nav-link text-light" asp-action="History">History</a></li>
            <li class="nav-item"><a class="nav-link text-light" asp-action="Messaging">Messaging</a></li>
            <li class="nav-item"><a class="nav-link text-light" asp-action="About">About</a></li>
        </ul>
    </nav>
    <div class="card container">
        <div class="card-header bg-light">
            Use this page to send a message to another site user.
        </div>
        <div class="card-body">
            <form asp-action="Messaging" method="post">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="Sender">Enter your name:</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">@@</span>
                        </div>
                        <input class="form-control" asp-for="Sender" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Receiver">Send to:</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">@@</span>
                        </div>
                        <input class="form-control" asp-for="Receiver" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="MessageText">Message:</label>
                    <textarea class="form-control" rows="4" asp-for="MessageText"></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="Important">Set message to important:</label>
                    <input class="form-check" asp-for="Important "/>
                </div>
                <div>
                    <button class="btn btn-primary" type="submit">Send</button>
                </div>
            </form>
            <a class="btn btn-secondary float-right" asp-action="ChooseUser">View Messages</a>
        </div>
    </div>
</body>
</html>
