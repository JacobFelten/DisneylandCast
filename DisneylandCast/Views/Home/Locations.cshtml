@model List<Location>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Locations</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-info">
        <ul class="navbar-nav">
            <li class="nav-item"><a class="nav-link text-light" asp-action="About"><<< Back</a></li>
        </ul>
    </nav>
    <h1 class="container text-center">Here's some notable people related to the park.</h1>
    <table class="container">
        <tr>
            <th class="text-center">Name</th>
            <th class="text-center">About</th>
            <th class="text-center">Link to more Info</th>
        </tr>
        @foreach (Location l in Model)
        {
            <tr>
                <td>@l.Name</td>
                <td>@l.Info</td>
                <td><a class="btn btn-sm btn-primary" href="@l.Link">More</a></td>
            </tr>
        }
    </table>
</body>
</html>
